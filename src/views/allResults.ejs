          <!-- Dynamic content -->
          <% if (Array.isArray(lostItems) && lostItems.length) { %>
            <% lostItems.forEach(function(item){ %>
              <article class="item-card">
                <img class="photo" 
                     src="<%= item.image %>"
                     alt="photo of <%= item.name %>" />
                
                <div class="card-body">
                  <h3 class="item-name"><%= item.name %></h3>
                  <p class="location-found"><%= item.location %></p>
                  <p class="desc"><%= item.description %></p>
                  <div class="card-actions">
                    <a class="btn outline" href="#">Claim</a>
                  </div>
                </div>
              </article>
            <% }); %>
          <% } else { %>
            <p>No items found.</p>
          <% } %>
        </div>
      </section>
