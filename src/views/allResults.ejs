              <label><input type="radio" name="building" checked /> Any</label>
              <label><input type="radio" name="building" /> Halsey</label>
              <label><input type="radio" name="building" /> Polk</label>
              <label><input type="radio" name="building" /> Sage</label>
            </div>
          </label>

          <div class="filter-actions">
            <button class="btn">Reset</button>
            <button class="btn primary">Apply</button>
          </div>
        </div>
      </aside>

      <section class="results" aria-label="Search results">
