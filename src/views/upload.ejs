<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/upload.css">
</head>
<body>
  <!-- Consistent header -->
  <%- include('partials/header'); %>

  <main>
    <h1>Upload a Lost Item</h1>

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <div>
        <label for="item_name">Item Name:</label>
        <input type="text" name="item_name" id="item_name" placeholder="e.g. Blue Backpack" required>
      </div>

      <div>
        <label for="photo">Upload Photo:</label>
        <input type="file" name="photo" id="photo" accept="image/*" required>
      </div>

      <div>
        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="3" required></textarea>
      </div>

      <fieldset>
        <legend>Building Found:</legend>

        <label>
          <input type="radio" name="building" value="Polk" required>
          Polk
        </label>

        <label>
          <input type="radio" name="building" value="Sage">
          Sage
        </label>

        <label>
          <input type="radio" name="building" value="Halsey">
          Halsey
        </label>
      </fieldset>

      <button type="submit">Submit</button>
    </form>

    <a href="/">Back to Home</a>
  </main>
</body>
</html>
